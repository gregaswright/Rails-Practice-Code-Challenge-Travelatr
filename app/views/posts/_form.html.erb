<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>


<%= form_for @post do |f| %>
    <%= f.label :blogger_id %>
    <%= f.collection_select :blogger_id, Blogger.all, :id, :name %>

    <%= f.label :destination_id %>
    <%= f.collection_select :destination_id, Destination.all, :id, :name %>

    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.label :content %>
    <%= f.text_area :content %>

    <%= f.submit %>
<% end %>

